= link_to item_path(item), class:"relative" do
  .group.relative.flex.flex-col.overflow-hidden.rounded-lg.border.shadow-sm class="hover:shadow-lg hover:scale-[1.005] transition-all  #{'disabled' if item.soldout?}" data-card-animate-target="card"
    .aspect-h-4.aspect-w-3.bg-form-input.transition.sm:aspect-none.sm:h-96
      - if item.photos.attached?
        = image_tag item.photos.first.variant(resize_to_fill: [600, 600]), class: "h-full w-full object-cover object-center sm:h-full sm:w-full"
    .flex.flex-1.flex-col.space-y-2.p-4.bg-form-input.min-h-36
      h3.text-sm.font-medium.text-contrast
        span.absolute.inset-0[aria-hidden="true"]
        = item.name
      p.text-sm.text-content.line-clamp-3
        = item.description
      p.text-base.font-medium.text-contrast class="!mt-auto"
        = "#{item.price} â‚¬"
      - if item.stock == 1
        p.text-sm.font-base.text-contrast.text-red-500
          = "Plus qu'un seul exemplaire en stock !"

  - if item.soldout?
    .absolute.left-1/2.top-1/2.-translate-x-1/2.-translate-y-1/2.text-center.opacity-100
      .text-3xl.text-red-500.font-bold RUPTURE DE STOCK
