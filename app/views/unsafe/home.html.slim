main.bg-contrast
  .mx-auto.px-4.pt-12.lg:max-w-7xl.lg:px-8
    section.mb-36.lg:col-span-2.lg:mt-0.xl:col-span-3[aria-labelledby="product-heading"]
      h2#product-heading.sr-only
        | Products
      h2.text-4xl.font-unsafe.text-light.mb-6 Shop
      = render "stores/items", items: @store.items.active, collections: @store.active_collections_with_items

    section.mb-12
