      .flex.flex-col.lg:flex-row.items-center.lg:items-start.gap-12
        / Image à gauche
        .rounded-xl.overflow-hidden.w-1/2.h-full
          = image_tag "unsafe/home.png", alt: "Impression textile", class: "object-cover object-center"
          = image_tag "unsafe/home.png", alt: "Impression textile", class: "object-cover object-center"

        / Texte à droite
        .flex-1
          .space-y-10
            / Bloc 1
            .border-b.pb-6
